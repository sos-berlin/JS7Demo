{
  "TYPE" : "Workflow",
  "version" : "1.1.0",
  "timeZone" : "Etc/UTC",
  "title" : "Prematurely completes a workflow based on dynamic job return values",
  "documentationName" : "PKB-JS7-OnlineDemo-Workflow-jdFinish",
  "orderPreparation" : {
    "parameters" : {
      "return_value_job1" : {
        "type" : "Number",
        "default" : "0"
      }
    },
    "allowUndeclared" : false
  },
  "jobResourceNames" : [ "Default" ],
  "instructions" : [ {
    "TYPE" : "Execute.Named",
    "jobName" : "job1",
    "label" : "job1"
  }, {
    "TYPE" : "If",
    "predicate" : "$return_value_job1 > 0",
    "then" : {
      "instructions" : [ {
        "TYPE" : "Execute.Named",
        "jobName" : "job2",
        "label" : "job2"
      }, {
        "TYPE" : "Finish"
      } ]
    }
  }, {
    "TYPE" : "Execute.Named",
    "jobName" : "job3",
    "label" : "job3"
  } ],
  "jobs" : {
    "job1" : {
      "agentName" : "primaryAgent",
      "executable" : {
        "TYPE" : "ShellScriptExecutable",
        "script" : "#!/bin/bash\n\necho \"using workflow: $JS7_WORKFLOW_NAME\"\necho \"running job: $JS7_JOB_NAME\"\n\nsleep 5",
        "v1Compatible" : false
      },
      "skipIfNoAdmissionForOrderDay" : false,
      "parallelism" : 1,
      "graceTimeout" : 15,
      "failOnErrWritten" : false
    },
    "job2" : {
      "agentName" : "primaryAgent",
      "executable" : {
        "TYPE" : "ShellScriptExecutable",
        "script" : "#!/bin/bash\n\necho \"using workflow: $JS7_WORKFLOW_NAME\"\necho \"running job: $JS7_JOB_NAME\"\n\nsleep 5",
        "v1Compatible" : false
      },
      "skipIfNoAdmissionForOrderDay" : false,
      "parallelism" : 1,
      "graceTimeout" : 15,
      "failOnErrWritten" : false
    },
    "job3" : {
      "agentName" : "primaryAgent",
      "executable" : {
        "TYPE" : "ShellScriptExecutable",
        "script" : "#!/bin/bash\n\necho \"using workflow: $JS7_WORKFLOW_NAME\"\necho \"running job: $JS7_JOB_NAME\"\n\necho \"return value reported from previous job: $RETURN_VALUE_JOB1\"\n\nsleep 5\n",
        "env" : {
          "RETURN_VALUE_JOB1" : "$return_value_job1"
        },
        "v1Compatible" : false
      },
      "skipIfNoAdmissionForOrderDay" : false,
      "parallelism" : 1,
      "graceTimeout" : 15,
      "failOnErrWritten" : false
    }
  }
}